{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2019",
    "lib": [
      "es6",
      "DOM",
      "DOM.Iterable",
      "ES2015",
      "ES2016",
      "ES2018",
      "ES2019.Object",
      "ES2018.AsyncIterable",
      "ES2020.String",
      "ES2019.Array"
    ],
    "module": "commonjs",
    "outDir": "build",
    "rootDirs": ["controllers", "routes", "server.ts"],
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "skipLibCheck": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
