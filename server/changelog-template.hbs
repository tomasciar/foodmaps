{{#each releases}}
  #
  {{title}}
  [{{isoDate}}]

  {{! lit commits with feature: in message, use feature: or Feature: }}
  {{#commit-list
    commits
    heading='### Features'
    message='(feature: )|(Feature: )'
    exclude='(fix: )|(Fix: )|(break: )|(Break: )|(misc: )|(Misc)'
  }}
    *
    {{subject}}
    ([`{{shorthash}}`]({{href}}))
  {{/commit-list}}

  {{! use fix: or Fix: }}
  {{#commit-list
    commits
    heading='### Fixes'
    message='(fix: )|(Fix: )'
    exclude='(break: )|(Break: )|(Feature: )|(feature: )|(misc: )|(Misc)'
  }}
    *
    {{subject}}
    ([`{{shorthash}}`]({{href}}))
  {{/commit-list}}

  {{! user break: or Break: }}
  {{#commit-list
    commits
    heading='### Breaking changes'
    message='(break: )|(Break: )'
    exclude='(fix: )|(Fix: )|(Feature: )|(feature: )|(misc: )|(Misc)'
  }}
    *
    {{subject}}
    ([`{{shorthash}}`]({{href}}))
  {{/commit-list}}

  {{! user misc: or Misc: }}
  {{#commit-list
    commits
    heading='### Miscellaneous'
    message='(misc: )|(Misc: )'
    exclude='(break: )|(Break: )|(fix: )|(Fix: )|(Feature: )|(feature: )'
  }}
    *
    {{subject}}
    ([`{{shorthash}}`]({{href}}))
  {{/commit-list}}

{{/each}}
