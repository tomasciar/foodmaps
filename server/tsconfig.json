{
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2022",
    "lib": [
      "es6",
      "DOM",
      "DOM.Iterable",
      "ES2015",
      "ES2016",
      "ES2018",
      "ES2019.Object",
      "ES2018.AsyncIterable",
      "ES2020.String",
      "ES2019.Array",
      "es2020"
    ],
    "outDir": "build",
    "rootDirs": ["controllers", "routes", "server.ts"],
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "module": "es2022",
    "moduleResolution": "node",
    "removeComments": true,
    "resolveJsonModule": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "../types/**/*.ts"],
  "exclude": ["node_modules"]
}
